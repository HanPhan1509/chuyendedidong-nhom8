<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
   >
   <TextView
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:id="@+id/txtmadoncxn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:background="#82CDC6"
        android:paddingLeft="10dp"
        android:text="Mã đơn hàng: 0000001"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingLeft="20dp">


        <TextView
            android:id="@+id/ngaygiao1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:fontFamily="@font/adamina"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nguoinhan1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:fontFamily="@font/adamina"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sodienthoai1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:fontFamily="@font/adamina"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/diachi1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:fontFamily="@font/adamina"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phuongthuctt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:fontFamily="@font/adamina"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tongsanpham1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="6 sản phẩm"
            android:textSize="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Thành tiền:"
                android:textColor="#373333"
                android:textAlignment="center"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tongtien1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="1.350.000đ"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5">



            <Button
                android:layout_marginRight="10dp"
                android:id="@+id/btnhuy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#009688"
                android:text="hủy" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5">



            <Button
                android:id="@+id/btnxong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#009688"
                android:text="XONG" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>